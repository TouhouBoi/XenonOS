/********** VALIDATION OPERATIONS **********/
function xenonDialog_openFile($folderPath, $filename) {
	$dialogParams = unserialize($GLOBALS['serialized_dialogParams_HID']->text);
	$callback = $dialogParams[1];
	$callback_checknum = $dialogParams[2];

	$folderPath = xenonDialog_resolvePath($folderPath,true);		//true only for xenonDialog1 compatibility
	$filePath = xenonDialog_getFormatedDirPath($folderPath.'/'.$filename);
	if($callback && $callback_checknum) {
		xenonx('rawjs',array('js'=>'sendMsg('.$callback_checknum.',"'.$callback.'",eyeParam("arg","'.$filePath.'"));'));
	}
	xenonDialog_closeDialog();
}
function xenonDialog_selectFolder($folderPath) {
	$dialogParams = unserialize($GLOBALS['serialized_dialogParams_HID']->text);
