function xenonDialog_saveAs($folderPath, $filename, $overwrite=false) {
	$dialogParams = unserialize($GLOBALS['serialized_dialogParams_HID']->text);
	$callback = $dialogParams[1];
	$callback_checknum = $dialogParams[2];

	$folderPath = xenonDialog_resolvePath($folderPath,true);		//true only for xenonDialog1 compatibility
	if (vfs('checkSpecialChars',array($filename)) === false) {
		$filename = str_replace('/','',$filename);
		$filename = str_replace('\\','',$filename);
	}
	$filename = xenonDialog_autoSetExtensionToFilename($filename, $dialogParams[6], true);		//force extension if needed
	$filePath = xenonDialog_getFormatedDirPath($folderPath.'/'.$filename);

	//xenonx('rawjs', array('js' => 'console.log("'.xenonDialog_resolvePath($folderPath).'/'.$filename.'")'));
	$filenameExtension = xenonDialog_getFilenameAndExtension($filename);
	$filenameExtension = $filenameExtension[1];
	if (!$overwrite && vfs('fileExists', array(xenonDialog_resolvePath($folderPath).'/'.$filename))) {
		xenonDialog_confirmFileReplace($folderPath, $filename);
		return;
	}

	if($callback && $callback_checknum) {
		xenonx('rawjs',array('js'=>'sendMsg('.$callback_checknum.',"'.$callback.'",eyeParam("arg","'.$filePath.'")+eyeParam("ext","'.$filenameExtension.'")+eyeParam("fileType","'.$GLOBALS['selectedFileType']->text.'"));'));
	}
	//xenonx('messageBox',array('content'=> 'Save as OK: '.$filePath));
	xenonDialog_closeDialog();
}

