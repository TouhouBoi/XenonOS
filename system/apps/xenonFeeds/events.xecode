function xenonFeeds_on_feedItemClick($params=null) {
	$item = xenonFeeds_getSelectedFeedItem();
	xenonFeeds_displayItemContent($item);

	global $myPid;
	$itemId = md5($item['id']);
	xenonx('rawjs',array('js' => 'document.getElementById("'.$myPid.'_titleIcon_'.$itemId.'").src="'.EYEFEEDS_FEEDITEM_ICONURL_READ.'";'));
}

function xenonFeeds_on_feedItemDblClick($params=null) {
	$item = xenonFeeds_getSelectedFeedItem();
	proc('launch', array('xenonNav', $item['permalink']));
}

function xenonFeeds_on_openEnclosure($params=null) {
	global $myPid;
	$itemId = $params['itemId'][0];
	$enc = $params['enc'][0];
	$item = xenonFeeds_getFeedItem($itemId);

	//prevent opening several times the same window
	if ($GLOBALS['enclosure_WND_'.$itemId]) {
		$GLOBALS['enclosure_WND_'.$itemId]->close();
	}

	$enclosureWindow = new Window(array(
		'name' => 'enclosure_WND_'.$itemId,
		'father' => 'xenonApps',
		'type' => NORMAL_WINDOW,
		'style' => TITLE+MIN+MAX+CLOSE+RESIZE,
		'cent' => 1,
		'width' => 500,
		'height' => 410,
		'title' => 'xenonFeeds - Enclosure',
		'removepid' => 0
	));
	$enclosureWindow->show();
	$enclosureWindow->setRawContent($item['enclosures'][$enc]['embed']);
}

function xenonFeeds_on_contentLinkClick($params=null) {
	if (! is_array($params) || !$params['url'])
		return;
	$url = urldecode($params['url'][0]);
	proc('launch', array('xenonNav', $url));
}


