function xenonFeeds_on_initComplete($params=null) {
	xenonFeeds_clearFeedItems();
	xenonFeeds_clearItemContent();
	$tree = xenonFeeds_drawFeedsTree(xenonFeeds_getSavedFeeds());
	$tree->expandTree();
}

//TOOLBAR
function xenonFeeds_on_addFeed_ITM($params=null) {
	xenonFeeds_createAddFeedDialog();
}
function xenonFeeds_on_addFolder_ITM($params=null) {
	xenonFeeds_createAddFolderDialog();
}
function xenonFeeds_on_editFeedFolder_ITM($params=null) {
	$feeds = xenonFeeds_getSavedFeeds();
	$selectedFeed = xenonFeeds_getFeedFromId($feeds['feed'], $GLOBALS['selectedFeedId_HID']->text);
	if ($selectedFeed) {
		if ($selectedFeed['type'][0] == 'folder') {
			xenonFeeds_createEditFolderDialog($selectedFeed);
		}
		else {
			xenonFeeds_createEditFeedDialog($selectedFeed);
		}
	}
}
function xenonFeeds_on_delFeedFolder_ITM($params=null) {
	$feeds = xenonFeeds_getSavedFeeds();
	$selectedFeed = xenonFeeds_getFeedFromId($feeds['feed'], $GLOBALS['selectedFeedId_HID']->text);
	if ($selectedFeed)
		xenonFeeds_createConfirmDeleteDialog($selectedFeed);
}
function xenonFeeds_on_import_ITM($params=null) {
	xenonFeeds_createImportFeedsDialog();
}
function xenonFeeds_on_export_ITM($params=null) {
	global $checknum;
	$options = array(
		XENONDIALOG_TYPE_SAVEFILE,
		'doExport',
		$checknum,
		'',
		array(
			'OPML files' => '*.opml|*.xml',
			'All files' => '*'
		),
		false,
		true
	);
	proc('launch',array('xenonDialog',$options));
}
function xenonFeeds_on_doExport($params=null) {
	if (! is_array($params['arg']) || !$params['arg'][0]) {
		return;
	}
	xenonFeeds_exportFeeds($params['arg'][0]);
}
function xenonFeeds_on_refreshFeed_ITM($params=null) {
	if (isFromBouncedRequest($params)) {
		$feeds = xenonFeeds_getSavedFeeds();
		$selectedFeed = xenonFeeds_getFeedFromId($feeds['feed'], $GLOBALS['selectedFeedId_HID']->text);
		if (!$selectedFeed)
			return;

		xenonFeeds_displayFeedItems($selectedFeed, true);
		return;
	}

	xenonFeeds_clearFeedItems();
	xenonFeeds_clearItemContent();
	$GLOBALS['loading_CTN']->unhide();

	$bouncedRequestParams = array(
		'__signal' => 'refreshFeed_ITM'
	);
	bounceRequest($bouncedRequestParams);
}
function xenonFeeds_on_settings_ITM($params="") {
	//xenonx('messageBox',array('content'=> 'Not Implemented Yet'));
	xenonFeeds_createSettingsDialog();
}

function xenonFeeds_on_help_ITM($params="") {
	proc('launch',array('xenonHelp','xenonFeeds'));
}

function xenonFeeds_on_feeds_TREE($params=null) {
	if (isFromBouncedRequest($params)) {
		$feeds = xenonFeeds_getSavedFeeds();
		$feed = xenonFeeds_getFeedFromId($feeds['feed'], $params['feedId'][0]);
		xenonFeeds_displayFeedItems($feed);
		$GLOBALS['itemsList_BOX']->setTitle($feed['name'][0]);
		$GLOBALS['itemContent_BOX']->setTitle('Select an item to read...');
		$GLOBALS['xenonFeeds_WND']->setTitle($feed['name'][0].' - '.i18n('translate',array('RSS Feed Reader')));
		return;
	}

	//the name of an item of the tree is 'typeOfNode_feedId'
	//(the first underscore separates the type of the node from the feed's id)
	$feedId = substr($params['itemName'][0], strpos($params['itemName'][0], '_') + 1); // utf8
	$feeds = xenonFeeds_getSavedFeeds();
	$feed = xenonFeeds_getFeedFromId($feeds['feed'], $feedId);

	$GLOBALS['selectedFeedId_HID']->setText($feedId);

	if ($feed !== false && $feed['type'][0] != 'folder') {
		$GLOBALS['loading_CTN']->unhide();
		$GLOBALS['currentFeedUrl_HID']->setText(serialize($feed['url'][0]));

		xenonFeeds_clearFeedItems();
		xenonFeeds_clearItemContent();
		$bouncedRequestParams = array(
			'__signal' => 'feeds_TREE',
			'feedId' => $feedId
		);
		bounceRequest($bouncedRequestParams);
	}
}

function xenonFeeds_on_feeds_CMN_addFeed_ENT($params=null) {
