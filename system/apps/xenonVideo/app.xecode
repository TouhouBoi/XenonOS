function xenonVideo_run($params = '') {
	global $checknum;
	global $myPid;
	if ($params[0]) {
		$myWindow = new Window(array(
			'cent' => 1,
			'father' => 'xenonApps',
			'height' => 374,
			'name' => 'xenonVideo_Window',
			'savePosition' => 1,
			'title' => basename($params[0]) . ' - xenonVideo',
			'style' => TITLE + MIN + LISTED + CLOSE,
			'width' => 470
		));
		$myWindow->show();
		xenonx('rawjs',array('js' => 'var e = document.getElementById("' . $myPid . '_xenonVideo_Window_Content"); e.style.display = "block"; e.style.height = "350px"; e.style.width = "468px";'));
		$myHidden = new Hidden(array(
			'father' => 'xenonVideo_Window',
			'name' => 'xenonVideo_Hidden',
			'text' => $params[0]
		));
		$myHidden->show();
		xenonx('loadScript',array('url' => 'index.php?extern=apps/xenonVideo/flowplayer.js&type=text'));
		
		addShortUrl($myPid . '_xenonVideo','getFile');
		xenonx('rawjs',array('js' => 'var func = function () { if (typeof flowplayer === "function") { flowplayer("' . $myPid . '_xenonVideo_Window_Content", {src: "index.php?extern=apps/xenonVideo/flowplayer.swf", wmode: "opaque"}, "index.php/' . $myPid . '_xenonVideo"); } else { setTimeout(func, 100); } }; func();'));
	} else {
		proc('end');
	}
}

function xenonVideo_end($params = '') {
	global $myPid;
	delShortUrl($myPid . '_xenonVideo');
	xenonWidgets('unserialize',$params);
}
