	}

	//$sqlGetView = 'SELECT * FROM mails';
	$query = sqlite_query($dbHandle, $sqlGetView);
	$result = sqlite_fetch_all($query, SQLITE_ASSOC);
	$GLOBALS['xenonMail_lfrom']->setText('From: %s',array($result[0]['sender']));
	$GLOBALS['xenonMail_lsubject']->setText('Subject: %s',array($result[0]['subject']));
	$GLOBALS['xenonMail_ldate']->setText('Date: %s',array($result[0]['date']));
	$GLOBALS['xenonMail_lto']->setText('To: %s',array($result[0]['to']));

	if($type == 'pop') {
		$body = $result[0]['body'];
	} elseif($GLOBALS['location']->text == 'inbox') {
		$connection = imap_open('{'.$server.':'.$port.$usessl.'/novalidate-cert}INBOX',$user,$password);
		$body = get_part($connection,$uid,'TEXT/PLAIN');
	} else {
		$body = $result[0]['body'];
	}
	$GLOBALS['xenonMail_mailBody']->setText($body);
	$attachments = list_attachments($connection,$uid);
}

