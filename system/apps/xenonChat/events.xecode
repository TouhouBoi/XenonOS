function xenonChat_on_Message($params="") {
	eyeWidgets('updateContent',$params);
}

function xenonChat_on_getMessages($params=null) {
	echo xenonChat('getMessagesHtml');
	exit;
}

function xenonChat_on_mainResize($params) {
	global $currentUser;
	
	$width = intval($params['arg'][0]);
	$height = intval($params['arg'][1]);

	$GLOBALS['xenonChat']->width = $width;
	$GLOBALS['xenonChat']->height = $height;

	$GLOBALS['xenonChatFrame']->setWidth($GLOBALS['xenonChat']->width - 2);
	$GLOBALS['xenonChatFrame']->setHeight($GLOBALS['xenonChat']->height - 60);

	if ($currentUser === ROOTUSER) {
		$width = $GLOBALS['xenonChat']->width - 120;
	} else {
		$width = $GLOBALS['xenonChat']->width - 70;
	}
	$GLOBALS['MessageB']->setWidth($width);

}

function xenonChat_on_addMsg($params=null) {
	global $checknum;
	$content = $GLOBALS['MessageB']->text;
	if(empty($content)) {
		return;
	}
	$GLOBALS['MessageB']->setText("");
	xenonChat('newMessage',array($content));
	$GLOBALS['xenonChatFrame']->setUrl("index.php?checknum=$checknum&msg=getMessages");
}

function xenonChat_on_clear($params=null){
	global $checknum;
	xenonChat('clear');
	$GLOBALS['xenonChatFrame']->setUrl("index.php?checknum=$checknum&msg=getMessages");
}

function xenonChat_on_newMessage($params = null) {
	proc('launch', array('newMessage', array('to' => $params['to'][0])));
}

function xenonChat_on_Close(){
	proc('end');
}

