function xenonImport_on_Import($params="") {
	global $checknum;
	$options = array(
		2,
		'SelectDestDialog',
		$checknum
	);
	proc('launch',array('xenonDialog',$options));
}

function xenonImport_on_doImport($params="") {
	if(empty($GLOBALS['mtextbox']->text)) {
		xenonx('messageBox',array('content'=>'You have to select a directory to import files'));
		return;
	}
	$path = um('getCurrentUserDir').'/'.FILES_USER_DIR.'/'.$GLOBALS['mtextbox']->text;
	$num = vfs('realToVirtualDir',array($path));
	xenonx('messageBox',array('content'=>'%s files imported!','tokens' => array($num)));
	$GLOBALS['lbl']->setText('%s files imported!',array($num));
}

function xenonImport_on_SelectDestDialog($params="") {
	$GLOBALS['mtextbox']->setText($params['arg'][0]);
}

function xenonImport_on_Message($params="") {
	xenonWidgets('updateContent',$params);
}

function xenonImport_on_Close(){
	proc('end');
}

