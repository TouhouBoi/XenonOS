function eyeDelete_run($params = '') {
	if ($params[0]) {
		$file = basename($params[0]);
		$path = xenonFiles('cleanPath', array(substr(trim($params[0], '/\\'), 0, -strlen($file)))); // utf8
		if ($path[1] != 'real' && vfs('fileExists',array($path[0] . '/' . $file))) {
			if (vfs('delete',array($path[0] . '/' . $file,1))) {
				xenonFiles('update',array('trash:///',$path[1] . '://' . $path[2]));
				xenonx('messageBox',array('content' => '"%s" moved to trash successfully.','tokens' => array($file)));
			} else {
				$error = 1;
			}
		} else {
			if ($path[1] !== 'real' && strtolower(strrchr($file, '.')) === '.' . strtolower(XENONOS_LINK_EXT)) { // utf8
				$xmlLink = xenonXML('getXMLfile',array($path[0] . '/' . $file));
			}
			if (vfs('real_delete',array($path[0] . '/' . $file))) {
				xenonFiles('update',array('trash://',$path[1] . '://' . $path[2]));
				xenonx('messageBox',array('content' => '"%s" has been removed successfully.','tokens' => array($file)));
			} else {
				$error = 1;
			}
		}
		if ($error) {
			xenonx('messageBox',array('content' => 'Error deleting file!'));
		} else {
			if ($xmlLink) {
				$file = $xmlLink['eyeLink'][0]['content'][0];
			}
			if ($path[1] === 'home' && /* utf8 */ strtolower(basename($path[2])) === 'desktop') {
				$xml = xenonXML('getXMLconfig',array('eyeDesk','icons.xml'));
				if (is_array($xml['icon'])) {
					foreach ($xml['icon'] as $key => $value) {
						if ($value['name'][0] == $file) {
							unset($xml['icon'][$key]);
						}
					}
					xenonXML('setXMLconfig',array('eyeDesk','icons.xml',$xml));
				}
			}
			if ($params[1]) {
				xenonx('rawjs',array('js' => $params[1]));
			}
		}
	}
	proc('end');
}
?>