function xenonShare_on_Close($params = '') {
	proc('end');
}

function xenonShare_on_Share($params = '') {
	if ($GLOBALS['xenonShare_Hidden']->text) {
		foreach (um('getCurrentGroups') as $group => $value) {
			if ($GLOBALS['xenonShare_Checkbox_' . $group]->checked) {
				proc('launch', array('xenonPaste', array('groups://' . $group, 'path' => $GLOBALS['xenonShare_Hidden']->text)));
			}
		}
	}
	proc('end');
}
