function xenonX_on_baseapp($params = '') {
	global $procInfo;
	$_SESSION['SCREEN']['xenonApps']['touch'] = $params['touch'][0] ? 1 : 0;
	$_SESSION['SCREEN']['xenonApps']['height'] = 0;
	$_SESSION['SCREEN']['xenonApps']['width'] = 0;
	$_SESSION['SCREEN']['xenonApps']['x'] = 0;
	$_SESSION['SCREEN']['xenonApps']['y'] = 0;
	$_SESSION['SCREEN']['height'] = 0;
	$_SESSION['SCREEN']['width'] = 0;
	xenonX_on_resizedBrowser($params);
	$_SESSION['SCREEN']['flash'] = $params['flash'][0];
	$_SESSION['SCREEN']['flash_version'] = $params['flashmajor'][0];
	$_SESSION['SCREEN']['oggVorbisSupported'] = $params['oggVorbisSupported'][0];
	if (!isset($_SESSION['SCREEN']['refresh'])) {
		$_SESSION['SCREEN']['refresh'] = 0;
	} else {
		$_SESSION['SCREEN']['refresh']++;
	}

	//xenonx should be the first tty, if not, get a new one, because we don't have one already.
	if($procInfo['tty'] < 1) {
		$tty = proc('newTty');
	} else {
		$tty = $procInfo['tty'];
	}

	xenonx('createDiv',array('class' => 'systemConsole','father' => 'xenonApps','name' => $tty.'_tty','nopid' => 1,'removepid' => 1));
	xenonx('updateCss',array('name'=> $tty.'_tty','property'=>'display','value'=>'none'));
	xenonx('rawjs',array('js' => 'xGetElementById("xenonx-info").style.display = "none"; xGetElementById("xenonx-powered").style.display = "none";'));
	$pid = proc('findPidByName',array(BASE_APP));
	if ($pid) {
		proc('getTask',array($pid));
	} else {
		proc('launch',array(BASE_APP));
	}
}

function xenonX_on_resizedBrowser($params = '') {
	if(!is_array($params) || !isset($params['height']) || !isset($params['width'])){
 		errorCodes('setErrorCode',array(INCORRECT_PARAMS));
 		return false;
 	}
	xenonx('rawjs', array('js' => 'resizedBrowser.done("<width>' . strval(intval($params['width'][0])) . '</width><height>' . strval(intval($params['height'][0])) . '</height>");'));
	// Set width
	$width = intval($params['width'][0]);
	if ($width < 500) {
		$width = 500;
	}
	// Set height
	$height = intval($params['height'][0]);
	if ($height < 400) {
		$height = 400;
	}
	$diffHeight = $_SESSION['SCREEN']['height'] - $height;
	$diffWidth = $_SESSION['SCREEN']['width'] - $width;
	$appHeight = $_SESSION['SCREEN']['xenonApps']['height'] - $diffHeight;
	$appWidth = $_SESSION['SCREEN']['xenonApps']['width'] - $diffWidth;
	xenonx('resizedBrowser',array('height' => $height,'width' => $width,'appWidth' => $appWidth,'appHeight' => $appHeight));
	xenonx('rawjs', array('js' => 'var e = document.getElementById("xenonApps"); e.style.height = "' . $_SESSION['SCREEN']['xenonApps']['height'] . 'px"; e.style.width = "' . $_SESSION['SCREEN']['xenonApps']['width'] . 'px";'));
}

function xenonX_on_viewTempImg($params = '') {
	$path = um('getCurrentUserDir') . '/tmp/' . basename($params);
	$info = @getimagesize($path);
	if ($info !== false) {
		header('Content-Type: ' . $info['mime']);
		header('Accept-Ranges: bytes');
		vfs('printFile',array($path));
	}
	exit;
}

function xenonX_on_saveWinPosition($params = '') {
	// X and Y
	$x = intval($params['left'][0]);
	$y = intval($params['top'][0]);

	// $app, $pid and $name
	$app = proc('findNameByChecknum', array($params['appChecknum'][0]));
	$pid = substr($params['winName'][0], 0, strpos($params['winName'][0], '_')); // utf8
	$name = substr($params['winName'][0], 1 + strlen($pid)); // utf8
	
	if (is_object($_SESSION[WTABLE][$pid][$name])) {
		// Update PHP object
		$_SESSION[WTABLE][$pid][$name]->x = $x;
		$_SESSION[WTABLE][$pid][$name]->y = $y;
		// Convert to Relative if Appropriate
		if ($_SESSION[WTABLE][$pid][$name]->savePosition === RELATIVE) {
			$x = ($x / $_SESSION['SCREEN']['xenonApps']['width']) * 100;
			$x = round($x, 2);	// gives a percentage
			$y = ($y / $_SESSION['SCREEN']['xenonApps']['height']) * 100;
			$y = round($y, 2);	// gives a percentage
		}
		// Update XML file
		$xml = xenonXML('getXMLconfig',array('xenonx',$app . '.xml'));
		$xml[$name][0]['left'][0] = $x;
		$xml[$name][0]['top'][0] = $y;
		xenonXML('setXMLconfig',array('xenonx',$app . '.xml',$xml));
	} else {
		xenonx('messageBox',array('content' => 'Unable to save position!'));
	}
}

