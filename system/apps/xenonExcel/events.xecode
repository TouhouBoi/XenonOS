function xenonExcel_on_saveFile($params=null) {
	$sheetPath = $GLOBALS['sheetPath']->text;
	if(empty($sheetPath)) {
		xenonExcel_on_SaveAs();
		return;
	}

	$arg = $params['arg1'][0];
	$arg = base64_decode($arg);

	$maxX = substr($arg, 0, strpos($arg, ',')); // utf8
	$arg = substr($arg, strpos($arg, "\n") + 1); // utf8
	$maxY = substr($arg, 0, strpos($arg, ',')); // utf8

	$myArgs = /* utf8 */ explode("\n", $arg);
	$pattern = '/\[(\d+)\,(\d+)\,\"([^"]+)\"/';

	include_once(XENONOS_ROOT.'/'.APP_DIR.'/xenonExcel/lib/ods'.XE_CODE_EXTENSION);
	$ods = newOds();

	for($i=0;$i<$maxX;$i++) {
		for($j=0;$j<$maxY;$j++) {
			$ods->addCell(0, $i, $j, "", 'string');
		}
	}

	$stack = array();
	foreach($myArgs as $value) {
		/* utf8 */ preg_match($pattern, $value, $matchs);
		$col = $matchs[1]; //column
		$row = $matchs[2]; //row
		$val = $matchs[3]; //value

		if(isset($val)) {
			$type = 'string';
			if(is_numeric($val)) {
				$type = 'float';
			} else if(is_bool($type)) {
				$type = 'boolean';
			}
			if(!isset($stack[$row])) {
				$stack[$row] = 0;
			}
			if($stack[$row] < $col) {
				for($i=$stack[$row];$i<$col;$i++) {
					$ods->addCell(0,$row,$i,"",'string');
				}
			}
			$stack[$row] = $col+1;
			if($val[0] == '=') { //Is it a formula?
				$ods->addFormula(0, $row, $col, $val);
			} else {
				$ods->addCell(0, $row, $col, $val, $type);
			}
		}
	}

	$convertToExcel = 0;
	if ( /* utf8 */ substr($sheetPath, -4) === '.xls') {
		$convertToExcel = 1;
	}
	saveOds($ods, $sheetPath, $convertToExcel);
	xenonFiles('update',array(dirname($sheetPath)));
	xenonx('messageBox',array('content'=>'Spreadsheet saved successfully.'));
}

function xenonExcel_on_SelectFileOpen($params=null) {
	global $myPid;
	global $checknum;
	$file = $params['arg'][0];
	if($file) {
		$file = um('getCurrentUserDir').FILES_USER_DIR.'/'.$file;
		$fp = vfs('open',array($file,'r'));
		if(!$fp) {
			xenonx('messageBox',array('content'=>'Sorry, you do not have sufficient permissions.'));
			return;
		}
		fclose($fp);
		proc('launch',array('xenonExcel',$file));
		proc('end');
	}
}

function xenonExcel_on_SaveAs($params=null) {
	global $checknum;
	$options = array(
		1,
		'SelectFileSave',
		$checknum,
	);
	proc('launch', array('xenonDialog',$options));
}

function xenonExcel_on_SelectFileSave($params=null) {
	global $myPid;

	$file = $params['arg'][0];
	if($file) {
		if ( /* utf8 */ strpos($file, '.') === false) {
			$file .= '.ods';
		}

		$file = um('getCurrentUserDir') . FILES_USER_DIR . '/' . $file;

		if (substr($file, -4) === '.ods' || substr($file, -4) === '.xls') { // utf8
			if(is_object($GLOBALS['sheetPath'])) {
				$GLOBALS['sheetPath']->text = $file;
			} else {
				$myHidden = new Hidden(array(
					'name'=>'sheetPath',
					'father'=>'xenonApps',
					'text'=>$file));
				eyeWidgets('serialize',array($myHidden));
			}
			xenonx('rawjs', array('js' => 'document.getElementById("'.$myPid.'_xenonExcelFrame").contentWindow.saveCode();'));
		}
	}
}

function xenonExcel_on_resetPath($params=null) {
	if(is_object($GLOBALS['sheetPath'])) {
		$GLOBALS['sheetPath']->text = '';
	} else {
		$myHidden = new Hidden(array(
			'name'=>'sheetPath',
			'father'=>'xenonApps',
			'text'=>''));
		eyeWidgets('serialize',array($myHidden));
	}
}

function xenonExcel_on_Close() {
	proc('end');
}
