function xenonHelp_on_Resize($params = '')
{
	$GLOBALS['WND_1']->height = intval($params['arg'][1]);
	$GLOBALS['WND_1']->width = intval($params['arg'][0]);
	$GLOBALS['WND_2']->setHeight($GLOBALS['WND_1']->height - $GLOBALS['WND_2']->y - 28);
