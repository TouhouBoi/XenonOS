}

function xenonHelp_Code($Text)
{
	global $checknum;
	global $currentUser;

	$dir = XENONOS_ROOT . '/' . APP_DIR . '/xenonHelp/lib/';
	$oldUser = $currentUser;
	$currentUser = ROOTUSER;
	$openDir = vfs('real_getDirContent',array($dir,'*' . XE_CODE_EXTENSION));
	$currentUser = $oldUser;

	foreach ($openDir as $file)
	{
		include_once($file);
	}

	return($Text);
}

function xenonHelp_on_Restart()
{
	global $myPid;

	proc('end');
	proc('launch', array ('xenonHelp'));
}

function xenonHelp_on_Close()
{
	global $myPid;

	eyeSessions('delVar', array ('xenonHelp_'.$myPid.'_app'));
	proc('end');
}
