function xenonMKDir_on_Close($params = '') {
	proc('end');
}

function xenonMKDir_on_Do($params = '') {
	$path = xenonFiles('cleanPath',array($GLOBALS['xenonMKDir_Hidden_Path']->text));
	$folder = $GLOBALS['xenonMKDir_Textbox']->text;
	if (vfs('checkSpecialChars',array($folder)) === false) {
		global $charBlackList;
		foreach ($charBlackList as $char){
			$folder = str_replace($char,'',$folder);
		}
		xenonx('messageBox',array('content' => 'Some special chars have been removed.'));
	}
	if (!vfs('mkDir',array($path[0] . '/' . $folder))) {
		xenonx('messageBox',array('content' => 'Error creating directory!'));
	} elseif ($GLOBALS['xenonMKDir_Hidden_Callback']->text) {
		xenonx('rawjs',array('js' => $GLOBALS['xenonMKDir_Hidden_Callback']->text));
	}
	xenonFiles('update',array($path[1] . '://' . $path[2]));
	proc('end');
}

function xenonMKDir_on_Message($params = '') {
	eyeWidgets('updateContent',$params);
}
