function xenonMKDir_run($params = '') {
	if ($params[0]) {
		xenonx('messageBox',array(
			'buttons' => array(array('Do','Accept'),array('Close','Cancel')),
			'content' => 'Type the name of the new folder',
			'hiddens' => array(array('xenonMKDir_Hidden_Path',$params[0]),array('xenonMKDir_Hidden_Callback',$params[1])),
			'img' => 'index.php?theme=' . $_SESSION['usertheme'] . '&extern=icons/48x48/folder.png',
			'savePosition' => 1,
			'textbox_event' => 'Do',
			'textbox_name' => 'xenonMKDir_Textbox',
			'title' => 'Create folder',
			'type' => 3,
			'win_name' => 'xenonMKDir_Window',
			'win_style' => TITLE + LISTED + MIN + CLOSE
		));
	} else {
		proc('end');
	}
}

function xenonMKDir_end($params = '') {
	eyeWidgets('unserialize');
}
