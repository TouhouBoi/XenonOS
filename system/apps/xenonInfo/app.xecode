function xenonInfo_run($params = '')
{
	$myWindow = new Window(
		array(
			'cent' => 1,
			'father' => 'xenonApps',
			'height' => 400,
			'name' => 'xenonInfo_Window',
			'title' => 'About',
			'savePosition' => 1,
			'style' => TITLE + LISTED + CLOSE + MIN,
			'width' => 400
		)
	);
	
	$myWindow->show();

	$myImagebox = new Imagebox(
		array(
			'cent' => 2,
			'cssClass' => 'cPointer',
			'disableMsg' => 0,
			'father' => 'xenonInfo_Window_Content',
			'name' => 'xenonInfo_Imagebox_Logo',
			'signal' => 'Navigate',
			'url' => 'index.php?extern=apps/xenonx/gfx/logo.png',
			'x' => 0,
			'y' => 15
		)
	);
	
	$myImagebox->show();

	$myLabel = new Label(
		array(
			'father' => 'xenonInfo_Window_Content',
			'name' => 'xenonInfo_Label_Version',
			'text' => 'XenonOS ' . 'v' . XENONOS_VERSION,
			'x' => 0,
			'y' => 75
		)
	);
	
	$myLabel->show();
	
	$myLabel->setCss(
		array(
			'font-weight' => 'bold',
			'text-align' => 'center',
			'width' => '398px'
		)
	);
}

function xenonInfo_end($params = '')
{
	xenonWidgets('unserialize', $params);
}
