function xenonLogin_on_Create($params = '') {
	global $checknum;
	global $currentUser;
	global $myPid;
	if (ALLOW_USER_REGISTER) {
		$user = $GLOBALS['xenonLogin_Textbox_2_User']->text;
		$password1 = base64_decode($GLOBALS['xenonLogin_Textbox_2_Password_1']->text);
		$password2 = base64_decode($GLOBALS['xenonLogin_Textbox_2_Password_2']->text);
		$language = basename($GLOBALS['xenonLogin_Select_2_Language']->selected);
		if (!$user || !$password1 || !$password2) {
			$GLOBALS['xenonLogin_Label_2_Message']->setText('Please fill out all fields!');
		} else if (utf8_strlen($user) < 2) {
			$GLOBALS['xenonLogin_Label_2_Message']->setText('Username is too short!');
		} else if (um('isValidUsername', array($user)) === false) {
			$GLOBALS['xenonLogin_Label_2_Message']->setText('Username should be alpha-numeric!');
		} else if (utf8_strlen($password1) < 4) {
			$GLOBALS['xenonLogin_Label_2_Message']->setText('Password is too short!');
		} elseif ($password1 != $password2) {
			$GLOBALS['xenonLogin_Label_2_Message']->setText('Password fields do not match!');
			$GLOBALS['xenonLogin_Textbox_2_Password_2']->setText('');
		} elseif ($language != 'en' && !vfs('real_fileExists',array(XENONOS_ROOT . '/' . APP_DIR . '/' . APP_CONF_SHARE . '/i18n/' . $language . '.xml'))) {
			$GLOBALS['xenonLogin_Label_2_Message']->setText('The language does not exist!');
		} else {
			$oldUser = $currentUser;
			$currentUser = ROOTUSER;
			if (um('userExist',array($user))) {
				$currentUser = $oldUser;
				$GLOBALS['xenonLogin_Label_2_Message']->setText('That user already exists!');
				$GLOBALS['xenonLogin_Textbox_2_User']->setText('');
			} elseif (um('createUser',array('username' => $user,'password' => $password1))) {
				$currentUser = $user;
				$xml = xenonXML('getXMLconfig',array('i18n','lang.xml'));
				$xml['lang'][0] = $language;
				xenonXML('setXMLconfig',array('i18n','lang.xml',$xml));
				xenonx('rawjs',array('js' => 'xenonLogin_2_Clean(' . $myPid . ');'));
				if (um('login',array($user,$password1))) {
					i18n('setLang',array($language));
					proc('setProcessUser',array($myPid));
					xenonx('rawjs',array('js' => 'xGetElementById("xenonx-info").style.display = "block"; xGetElementById("xenonx-powered").style.display = "block"; xenonLogin_successLogin("' . sec('cleanOutPutString',array('var' => $user,'noreturn' => 1,'nohtml' => 1)) . '","' . $checknum . '","' . $myPid . '");'));
				}
			} else {
				$currentUser = $oldUser;
				$GLOBALS['xenonLogin_Label_2_Message']->setText('Error creating new user!');
			}
		}
	} else {
		if (is_object($GLOBALS['xenonLogin_Label_2_Message'])) {
			$GLOBALS['xenonLogin_Label_2_Message']->setText('This system does not allow user registrations!');
		}
	}
	$GLOBALS['xenonLogin_Label_2_Message']->unhide();
}

function xenonLogin_on_Login($params = '') {
	global $checknum;
	global $currentUser;
	global $myPid;
	$GLOBALS['xenonLogin_Label_1_Disabled']->hide();
	$user = basename($GLOBALS['xenonLogin_Textbox_1_User']->text);
	$loginCorrect = false;
	//If secure login is enabled, and the UM module have the needed function to login with hash, use it (SAWASC)
	if (SECURE_LOGIN == 1 && function_exists('service_um_loginWithHash')) {
		$oldUser = $currentUser;
		$currentUser = ROOTUSER;
		$xml = um('retrieveUser',array($user));
		$currentUser = $oldUser;
		$password = $GLOBALS['xenonLogin_Textbox_1_Password']->text;
		$password2 = md5($_SESSION['sawasc'] . $xml['eyeUser'][0]['password'][0]);
		if (hash_equals($password2, $password) && um('loginWidthHash',array($user,$xml['eyeUser'][0]['password'][0]))) {
			$loginCorrect = true;
		}
	//If not, just use the classic plain text
	} else {
		$password = base64_decode($GLOBALS['xenonLogin_Textbox_1_Password']->text);
		if (um('login',array($user,$password))) {
			$loginCorrect = true;
		}
	}
	$language = $GLOBALS['xenonLogin_Select_1_Language']->selected;
	if ($loginCorrect == true) {
		unset($_SESSION['sawasc']);
		$currentUser = $user;
		$xml = xenonXML('getXMLconfig',array('xenonx','xenonx.xml'));
		if ($xml['changes'][0]['increase'][0]) {
			$xml['changes'][0]['times'][0] += $xml['changes'][0]['increase'][0];
			$xml['changes'][0]['increase'][0] = 0;
			xenonXML('setXMLconfig',array('xenonx','xenonx.xml',$xml));
		}
		if ($language && $language != '[auto]' && ($language == 'en' || vfs('real_fileExists',array(XENONOS_ROOT . '/' . APP_DIR . '/' . APP_CONF_SHARE . '/i18n/' . $language . '.xml')))) {
			i18n('setLang',array($language));
		} else {
			$xml = xenonXML('getXMLconfig',array('i18n','lang.xml'));
			if ($xml['lang'][0]) {
				i18n('setLang',array($xml['lang'][0]));
			} else {
				i18n('setLang',array('en'));
			}
		}
		proc('setProcessUser',array($myPid));
		xenonx('rawjs',array('js' => 'xGetElementById("xenonx-info").style.display = "block"; xGetElementById("xenonx-powered").style.display = "block"; xenonLogin_successLogin("' . sec('cleanOutPutString',array('var' => $user,'noreturn' => 1,'nohtml' => 1)) . '","' . $checknum . '","' . $myPid . '");'));
	} else {
		if (errorCodes('getErrorCode') == UM_USER_IS_DISABLED) {
			$GLOBALS['xenonLogin_Label_1_Disabled']->unhide();
		} else {
			xenonx('rawjs',array('js' => 'xenonLogin_badLogin("' . sec('cleanOutPutString',array('var' => $user,'noreturn' => 1,'nohtml' => 1)) . '","' . sec('cleanOutPutString',array('var' => $password,'noreturn' => 1,'nohtml' => 1)) . '","' . $checknum . '","' . $myPid . '");'));
		}
	}
}

function xenonLogin_on_Message($params = '') {
	xenonWidgets('updateContent',$params);
}

function xenonLogin_on_successLogin($params = '') {
	global $currentUser;
	if ($currentUser) {
		$pid = proc('findPidByName',array('xenonx'));
		proc('setProcessUser',array($pid));
		xenonx('systemSound', array('login'));
		if ($_SESSION['SCREEN']['is_phone']) {
			$hide_address_bar = 'window.scrollTo(0,1);';
		} else {
			$hide_address_bar = '';
		}
		xenonx('rawjs',array('js' => 'xGetElementById("xenonx-info").style.display = "none"; xGetElementById("xenonx-powered").style.display = "none";' . $hide_address_bar));

		$xml = um('retrieveUser',array($currentUser));
		if (isset($xml['eyeUser'][0]['resetPassword']) === true && $xml['eyeUser'][0]['resetPassword'][0]) {
			xenonLogin_dialog_ResetPassword();
		} else {
			loadConfig('xenonLogin');
			proc('launch',array(LOGIN_EXECUTE,'autorun'));
			proc('end');
		}
	}
}

function xenonLogin_dialog_ResetPassword() {
	$myWindow = new Window(array(
		'cent' => 1,
		'father' => 'xenonApps',
		'height' => 200,
		'name' => 'xenonLogin_Window_ResetPassword',
		'style' => TITLE,
		'title' => 'Change password',
		'width' => 350
