	$y = 20;
	$myLabel = new Label(array(
		'father' => 'xenonLogin_Window_ResetPassword_Content',
		'name' => 'xenonLogin_Label_ResetPassword',
		'text' => 'You need to specify a new password for this account now...',
		'x' => 10,
		'y' => $y
	));
	$myLabel->show();

	$y += 40;
	$myLabel = new Label(array(
		'father' => 'xenonLogin_Window_ResetPassword_Content',
		'name' => 'xenonLogin_Label_ResetPassword_1',
		'text' => 'New Password:',
		'x' => 10,
		'y' => $y + 3
	));
	$myLabel->show();
	$myTextbox_1 = new Textbox(array(
		'father' => 'xenonLogin_Window_ResetPassword_Content',
		'name' => 'xenonLogin_Textbox_ResetPassword_1',
		'password' => 2,
		'width' => 160,
		'x' => 160,
		'y' => $y
	));
	$myTextbox_1->show();
	$myTextbox_1->focus();

	$y += 40;
	$myLabel = new Label(array(
		'father' => 'xenonLogin_Window_ResetPassword_Content',
		'name' => 'xenonLogin_Label_ResetPassword_2',
		'text' => 'Retype password:',
		'x' => 10,
		'y' => $y + 3
	));
	$myLabel->show();
	$myTextbox_2 = new Textbox(array(
		'father' => 'xenonLogin_Window_ResetPassword_Content',
		'name' => 'xenonLogin_Textbox_ResetPassword_2',
		'password' => 2,
		'width' => 160,
		'x' => 160,
		'y' => $y
	));
	$myTextbox_2->addFriend($myTextbox_1);
	$myTextbox_2->show();
	$myTextbox_2->addEnterEventMsg('ResetPassword');

	$y += 40;
	$myButton = new Button(array(
		'caption' => 'Set new password',
		'cent' => 2,
		'father' => 'xenonLogin_Window_ResetPassword_Content',
		'name' => 'xenonLogin_Button_ResetPassword',
		'signal' => 'ResetPassword',
		'y' => $y
	));
	$myButton->addFriend($myTextbox_1);
	$myButton->addFriend($myTextbox_2);
	$myButton->show();
}

function xenonLogin_on_ResetPassword($params = '') {
	global $currentUser;

	if ($currentUser) {
		$password1 = base64_decode($GLOBALS['xenonLogin_Textbox_ResetPassword_1']->text);
		$password2 = base64_decode($GLOBALS['xenonLogin_Textbox_ResetPassword_2']->text);

		if (!$password1 || !$password2) {
			xenonx('messageBox', array('content' => 'Please fill out all fields!'));
		} else if (utf8_strlen($password1) < 4) {
			xenonx('messageBox', array('content' => 'Password is too short!'));
		} elseif ($password1 != $password2) {
			xenonx('messageBox', array('content' => 'Password fields do not match!'));
		} else {
			$oldUser = $currentUser;
			$currentUser = ROOTUSER;
			um('updateUser',array('username' => $oldUser, 'password' => $password1, 'resetPassword' => 0));
			$currentUser = $oldUser;

			loadConfig('xenonLogin');
			proc('launch',array(LOGIN_EXECUTE,'autorun'));
			proc('end');
		}
	}
}

