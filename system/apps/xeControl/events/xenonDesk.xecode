function xeControl_on_xenondesk_new($params = '') {
	$mySelect = xenonx('messageBox',array(
		'buttons' => array(array('xenondesk_new_add','Add'),array('xenondesk_new_cancel','Cancel')),
		'content' => 'Type the command you want to run at login.',
		'father' => 'xeControl_container_big',
		'img' => 'index.php?theme=' . $_SESSION['usertheme'] . '&extern=icons/48x48/exec.png',
		'select_event' => 'xenondesk_new_add',
		'select_name' => 'xeControl_xenondesk_new_select',
		'title' => 'New command',
		'type' => 3,
		'win_name' => 'xeControl_xenondesk_new_window',
		'win_removepid' => 0,
		'win_style' => TITLE + CLOSE
	));

	global $currentUser;
	$oldUser = $currentUser;
	$currentUser = ROOTUSER;
	$applicationsList = vfs('real_getDirContent', array(XENONOS_ROOT . '/' . APP_DIR . '/'));
	$currentUser = $oldUser;

	foreach ($applicationsList as $application) {
		if (is_dir($application)) {
			$application = basename($application);
			if ($application != 'share') {
				$mySelect->addOption($application, $application);
			}
		}
	}
}

function xeControl_on_xenondesk_new_add($params = '') {
	$autorun = $GLOBALS['xeControl_xenondesk_new_select']->selected;
	if ($autorun) {
		$autorunXML = xeControl_lib_getXMLconfig(array('xenonDesk','conf.xml'));
		$arrayIds = xeControl_lib_findIdByText(array($autorunXML['xenonDesk'][0]['autolaunch'],$autorun));
		if (isset($arrayIds[0])) {
			xenonx('messageBox',array('content' => 'That command is already configured!'));
		} else {
			$autorunXML['xenonDesk'][0]['autolaunch'][] = $autorun;
			xeControl_lib_setXMLconfig(array('xenonDesk','conf.xml',$autorunXML));
			xenonx('messageBox',array('content' => 'Command successfully added.'));
			xeControl_lib_loadContent('system','xenondesk');
		}
	} else {
		xenonx('messageBox',array('content' => 'Please type a command!'));
	}
}

function xeControl_on_xenondesk_new_cancel($params = '') {
	$GLOBALS['xeControl_xenondesk_new_window']->close();
}

function xeControl_on_xenondesk_edit($params = '') {
	$autorun = $GLOBALS['xeControl_xenondesk_sortabletable']->selected;
	if ($autorun) {
		$mySelect = xenonx('messageBox',array(
			'buttons' => array(array('xenondesk_edit_save','Save'),array('xenondesk_edit_cancel','Cancel')),
			'content' => 'Type the command you want to run at login.',
			'father' => 'xeControl_container_big',
			'hiddens' => array(array('xeControl_xenondesk_edit_hidden',$autorun)),
			'img' => 'index.php?theme=' . $_SESSION['usertheme'] . '&extern=icons/48x48/exec.png',
			'select_event' => 'xenondesk_new_save',
			'select_name' => 'xeControl_xenondesk_edit_select',
			'title' => 'Edit command',
			'type' => 3,
			'win_name' => 'xeControl_xenondesk_edit_window',
			'win_removepid' => 0,
			'win_style' => TITLE + CLOSE
		));
		foreach (vfs('real_getDirContent', array(XENONOS_ROOT . '/' . APP_DIR . '/')) as $application) {
			if (is_dir($application)) {
				$application = basename($application);
				if ($application != 'share') {
					$mySelect->addOption($application, $application, ($application == $autorun));
				}
			}
		}
	} else {
		xenonx('messageBox',array('content' => 'Please choose a command to be edited.'));
	}
}

function xeControl_on_xenondesk_edit_save($params = '') {
	$autorun_new = $GLOBALS['xeControl_xenondesk_edit_select']->selected;
	$autorun_old = $GLOBALS['xeControl_xenondesk_edit_hidden']->text;
	if ($autorun_new) {
		$autorunXML = xeControl_lib_getXMLconfig(array('xenonDesk','conf.xml'));
		$arrayIds = xeControl_lib_findIdByText(array($autorunXML['xenonDesk'][0]['autolaunch'],$autorun_old));
		$arrayIds = $arrayIds[0];
		if (isset($arrayIds)) {
			$autorunXML['xenonDesk'][0]['autolaunch'][$arrayIds] = $autorun_new;
			xeControl_lib_setXMLconfig(array('xenonDesk','conf.xml',$autorunXML));
			xenonx('messageBox',array('content' => 'Command successfully saved.'));
			xeControl_lib_loadContent('system','xenondesk');
		} else {
			xenonx('messageBox',array('content' => 'That command does not exist!'));
		}
	} else {
		xenonx('messageBox',array('content' => 'Please type a command!'));
	}
}

function xeControl_on_xenondesk_edit_cancel($params = '') {
	$GLOBALS['xeControl_xenondesk_edit_window']->close();
}

function xeControl_on_xenondesk_default($params = '') {
	xenonx('messageBox',array(
		'buttons' => array(array('xenondesk_default_yes','Yes'),array('xenondesk_default_no','No')),
		'content' => 'Do you really want to restore the default xenonDesk settings?',
		'father' => 'xeControl_container_big',
		'img' => '?',
		'title' => 'Use defaults',
		'type' => 3,
		'win_name' => 'xeControl_xenondesk_default_window',
		'win_removepid' => 0,
		'win_style' => TITLE + CLOSE
	));
}

function xeControl_on_xenondesk_default_yes($params = '') {
	global $currentUser;
	$oldUser = $currentUser;
	$currentUser = ROOTUSER;
	$xmlDef = xenonXML('getXMLfile',array(XENONOS_ROOT . '/' . SYSTEM_DIR . '/' . SYSTEM_CONF_DIR . '/skel/' . CONF_USER_DIR . '/xenonDesk/conf.xml'));
	$currentUser = $oldUser;
	$xmlNew = xeControl_lib_getXMLconfig(array('xenonDesk','conf.xml'));
	$xmlNew['xenonDesk'][0]['autolaunch'] = $xmlDef['xenonDesk'][0]['autolaunch'];
	xeControl_lib_setXMLconfig(array('xenonDesk','conf.xml',$xmlNew));
	xenonx('messageBox',array('content' => 'Default settings successfully set.'));
	xeControl_lib_loadContent('system','xenondesk');
}

function xeControl_on_xenondesk_default_no($params = '') {
	$GLOBALS['xeControl_xenondesk_default_window']->close();
}

function xeControl_on_xenondesk_delete($params = '') {
	$autorun = $GLOBALS['xeControl_xenondesk_sortabletable']->selected;
	if ($autorun) {
		xenonx('messageBox',array(
			'buttons' => array(array('xenondesk_delete_yes','Yes'),array('xenondesk_delete_no','No')),
			'content' => 'Do you really want to remove this command?',
			'father' => 'xeControl_container_big',
			'hiddens' => array(array('xenondesk_delete_hidden',$autorun)),
			'img' => 'index.php?theme=' . $_SESSION['usertheme'] . '&extern=icons/48x48/editClean.png',
			'title' => 'Delete autorun',
			'type' => 3,
			'win_name' => 'xeControl_xenondesk_delete_window',
			'win_removepid' => 0,
			'win_style' => TITLE + CLOSE
		));
	} else {
		xenonx('messageBox',array('content' => 'Please choose a command to be deleted.'));
	}
}

function xeControl_on_xenondesk_delete_yes($params = '') {
	$autorun = $GLOBALS['xenondesk_delete_hidden']->text;
	if ($autorun) {
		$autorunXML = xeControl_lib_getXMLconfig(array('xenonDesk','conf.xml'));
		$x = xeControl_lib_findIdByText(array($autorunXML['xenonDesk'][0]['autolaunch'],$autorun));
		$x = $x[0];
		unset($autorunXML['xenonDesk'][0]['autolaunch'][$x]);
		xeControl_lib_setXMLconfig(array('xenonDesk','conf.xml',$autorunXML));
		xenonx('messageBox',array('content' => 'Command successfully deleted.'));
		xeControl_lib_loadContent('system','xenondesk');
	}
}

function xeControl_on_xenondesk_delete_no($params = '') {
	$GLOBALS['xeControl_xenondesk_delete_window']->close();
}
